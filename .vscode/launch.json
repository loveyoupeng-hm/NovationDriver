{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launchpad Mini",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Launchpad/Launchpad_artefacts/Debug/Standalone/Launchpad.exe",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "windows": {
                "MIMode": "lldb",
                "miDebuggerPath": "D:/Program Files/LLVM/bin/lldb.exe"
            }
        },
        {
            "name": "windows",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Launchpad/Launchpad_artefacts/Debug/Standalone/Launchpad.exe",
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "externalConsole": false,
        }
    ]
}